<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/auth/header', {title: 'Register'}); %>

  <body>
    <div class="authentication-bg min-vh-100">
      <div class="bg-overlay bg-light"></div>
      <div class="container">
        <div class="d-flex flex-column min-vh-100">
          <div class="row justify-content-center my-auto">
            <div class="col-md-8 col-lg-6 col-xl-5">
              <div class="card mt-5">
                <div class="card-body">
                  <div class="p-3">
                    <div class="mb-3 text-center mb-md-4">
                      <a href="index.html" class="d-block auth-logo">
                        <img
                          src="/assets/images/logo2.jpg"
                          alt=""
                          height="32"
                          class="auth-logo-dark"
                        />
                        <img
                          src="/assets/images/logo2.jpg"
                          alt=""
                          height="32"
                          class="auth-logo-light"
                        />
                      </a>
                    </div>
                    <div class="mb-4 text-center">
                      <h5 class="mb-1">Register Account</h5>
                      <p class="text-muted">Get your Zenflow account now.</p>
                      <% if (message) {%>
                      <div
                        class="alert alert-<%- state %> alert-outline alert-dismissible fade show text-start"
                        role="alert"
                      >
                        <i
                          class="uil uil-exclamation-octagon font-size-16 text-<%- state %> me-2"
                        ></i>
                        <%- message %>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="alert"
                          aria-label="Close"
                        ></button>
                      </div>
                      <% } %>
                    </div>
                    <form class="form-horizontal mt-3" method="post">
                      <div class="mb-3">
                        <label class="form-label" for="emailID">Email</label>
                        <input
                          type="text"
                          class="form-control"
                          id="emailID"
                          name="email"
                          placeholder="Enter e-mail"
                        />
                      </div>

                      <div class="form-password mb-3 auth-pass-inputgroup">
                        <label class="form-label" for="userpassword"
                          >Password</label
                        >
                        <div class="position-relative">
                          <input
                            type="password"
                            class="form-control"
                            id="password-input"
                            name="password"
                            placeholder="Enter password"
                          />
                          <button
                            type="button"
                            class="btn btn-link position-absolute h-100 end-0 top-0 shadow-none"
                            id="password-addon"
                          >
                            <i
                              class="mdi mdi-eye-outline font-size-16 text-muted"
                            ></i>
                          </button>
                        </div>
                      </div>

                      <div class="row mb-3">
                        <div class="col-12">
                          <div class="form-checkbox d-flex">
                            <input
                              type="checkbox"
                              class="form-check-input me-1"
                              id="customControlInline"
                              required
                            />
                            <label
                              class="form-label text-muted font-size-13"
                              for="customControlInline"
                              >By registering you agree to the
                              <span class="text-primary"
                                >Terms of Use</span
                              ></label
                            >
                          </div>
                        </div>
                        <!-- end col -->
                      </div>
                      <!-- end row -->

                      <div class="row justify-content-center">
                        <div class="col-sm-4 text-center">
                          <button
                            class="btn btn-primary w-100 rounded-pill"
                            type="submit"
                          >
                            Register
                          </button>
                        </div>
                      </div>
                      <!-- end row -->
                    </form>
                    <!-- end -->
                  </div>
                </div>
                <!-- end card-body -->
              </div>
              <!-- end card -->
              <div class="mt-3 text-center text-muted">
                <p class="mb-0">
                  Already have an account ?
                  <a href="/login" class="fw-medium"> Login now </a>
                </p>
              </div>
            </div>
            <!-- end col -->
          </div>
          <!-- end row -->
        </div>
      </div>
      <!-- end container -->
    </div>
    <!-- end authentication section -->

    <!-- JAVASCRIPT -->
    <%- include('../partials/auth/scripts'); %>
  </body>
</html>
